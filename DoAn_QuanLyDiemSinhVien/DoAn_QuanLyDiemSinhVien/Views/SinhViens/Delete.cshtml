@model DoAn_QuanLyDiemSinhVien.Models.SinhVien

@{
    ViewBag.Title = "Xóa sinh viên";
    Layout = "~/Views/Shared/_LayoutQuanLyDiem.cshtml";
}

<h2>Xóa sinh viên</h2>

<h3>Bạn có chắc muốn xóa sinh viên này không?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            Họ và tên
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HoTen)
        </dd>

        <dt>
            Ngày sinh
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgaySinh)
        </dd>

        <dt>
            Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            Lớp
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Lop)
        </dd>

        <dt>
            Hình
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Hinh)
        </dd>

        @*<dt>
            @Html.DisplayNameFor(model => model.DiemTB)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DiemTB)
        </dd>*@

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa sinh viên" class="btn btn-primary" /> |
            @Html.ActionLink("Trở về trang trước", "Index")
        </div>
    }
</div>
