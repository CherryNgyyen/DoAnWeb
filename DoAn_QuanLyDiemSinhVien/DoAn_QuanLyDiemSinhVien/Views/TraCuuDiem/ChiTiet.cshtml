@model IEnumerable<DoAn_QuanLyDiemSinhVien.Models.Diem>
@{
    ViewBag.Title = "Chi tiết điểm";
    Layout = "~/Views/Shared/_LayoutTraCuuDiem.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Chi tiết điểm của sinh viên</h1>
                                </div>
                                <div class="text-center">
                                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" style="background-color:whitesmoke">
                                        <thead>
                                            <tr>
                                                <th>Mã môn học</th>
                                                <th>Tên môn học</th>
                                                <th>Số tín chỉ</th>
                                                <th>Điểm sinh viên</th>
                                                <th>Học kỳ</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@Html.DisplayFor(modelItem => item.MaMH)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.MonHoc.TenMH)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.MonHoc.SoTC)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.DiemSV)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.MonHoc.HocKy)</td>
                                                </tr>
                                                <tr>
                                                    <td colspan="3">Sinh viên: @Html.DisplayFor(modelItem => item.SinhVien.HoTen)</td>
                                                    <td colspan="2">Điểm trung bình: @Html.DisplayFor(modelItem => item.SinhVien.DiemTB)</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>