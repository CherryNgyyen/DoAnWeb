@model IEnumerable<DoAn_QuanLyDiemSinhVien.Models.MonHoc>

@{
    ViewBag.Title = "Quản lý môn học";
    Layout = "~/Views/Shared/_LayoutQuanLyDiem.cshtml";
}

<h2>Danh sách môn học</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" style="background-color:whitesmoke">
    <tr>
        <th>
            Tên môn học
        </th>
        <th>
            Số tín chỉ
        </th>
        <th>
            Học kỳ
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenMH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoTC)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HocKy)
        </td>
        <td>
            @Html.ActionLink("Sửa môn học", "Edit", new { id=item.MaMH }) |
            @Html.ActionLink("Chi tiết môn học", "Details", new { id=item.MaMH }) |
            @Html.ActionLink("Xóa môn học", "Delete", new { id=item.MaMH })
        </td>
    </tr>
}

</table>
